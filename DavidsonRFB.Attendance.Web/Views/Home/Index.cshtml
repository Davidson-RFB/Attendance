@model DavidsonRFB.Attendance.Web.Models.Attendees

<div class="row" style="padding-top: 30px;">
    <div class="col-md-7">
        <div class="well">
            <fieldset>
                <legend>Current Attendance</legend>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Rank</th>
                            <th>Job</th>
                            <th>Started</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DavidsonRFB.Attendance.Web.Models.Attendance attendance in Model.CurrentAttendance)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => attendance.Employee.Name)</td>
                                <td>@Html.DisplayFor(m => attendance.Employee.Rank.Description)</td>
                                <td>@Html.DisplayFor(m => attendance.Job.Description)</td>
                                <td>@Html.DisplayFor(m => attendance.StartDateTime, "ClockInDateTime")</td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.ActionLink("Clock Out Everyone", "ClockOutAll", null, new { @class = "btn btn-default" })
            </fieldset>
        </div>
    </div>

    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div class="col-md-5">
            <div class="well">
                <fieldset>
                    <legend>Clock In/Out</legend>
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Member:</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(m => m.EmployeeId, new SelectList(ViewBag.Employees, "Id", "Name"), new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Job:</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(m => m.JobId, new SelectList(ViewBag.Jobs, "Id", "Description"), new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" class="btn btn-primary" value="Clock In/Out" />
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-offset-3 col-md-9 text-danger">@ViewBag.Message</span>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    }
</div>
